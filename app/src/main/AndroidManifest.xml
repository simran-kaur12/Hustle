<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hustle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/bus_booking_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bus_booking_round_logo"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SavingActivity"
            android:exported="false" />

        <activity
            android:name=".activity.ticket"
            android:exported="false" />
        <activity
            android:name=".activity.Booking"
            android:exported="false" />
        <activity
            android:name=".activity.Available_buses"
            android:exported="false" />
        <activity
            android:name=".activity.AdminMainPage"
            android:exported="false" />
        <activity
            android:name=".activity.SignUp"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="24" />
        <activity
            android:name=".activity.Profile"
            android:exported="false" />
        <activity
            android:name=".activity.DashBoard"
            android:exported="false" />
        <activity
            android:name=".activity.add_bus"
            android:exported="false" />
        <activity
            android:name=".activity.Login"
            android:exported="false" />
        <activity
            android:name=".activity.MainScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>